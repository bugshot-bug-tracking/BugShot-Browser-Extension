{
    "name": "Testshot",
    "version": "1.1",
    "description": "Make a Screenshot",
    "permissions": ["activeTab", "declarativeContent", "storage", "tabs", "<all_urls>"],
    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "html/popup.html",
        "default_icon": "images/get_started16.png",
        "default_title": "Screenshot this",
        "matches": ["<all_urls>"]
    },
    "content_scripts": [{
            "js": ["js/content.js"],
            "css": ["css/content.css"],
            "matches": ["<all_urls>"]
        }

    ],
    "icons": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
    },
    "manifest_version": 2
}