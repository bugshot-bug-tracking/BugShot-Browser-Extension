{
	"compilerOptions": {
		"baseUrl": ".",
		"module": "ESNext",
		"target": "es2020",
		"lib": ["DOM", "ESNext"],
		"strict": true,
		"esModuleInterop": true,
		"jsx": "preserve",
		"skipLibCheck": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"noUnusedLocals": true,
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["vite/client", "vue/macros", "chrome"],
		"paths": {
			"~/*": ["src/*"]
		},
		"allowJs": true
	},
	"exclude": ["extension", "node_modules"]
}
