{
	"compilerOptions": {
		"baseUrl": ".",
		"module": "ESNext",
		"target": "es2020",
		"lib": ["DOM", "ESNext"],
		"strict": true,
		"esModuleInterop": true,
		"jsx": "preserve",
		"skipLibCheck": true,
		"moduleResolution": "nodenext",
		"resolveJsonModule": true,
		"noUnusedLocals": true,
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,
		"types": [
			"vite/client",
			"vue/macros",
			"chrome",
			"@intlify/unplugin-vue-i18n/client",
			"@intlify/unplugin-vue-i18n/messages",
			"naive-ui/volar"
		],
		"paths": {
			"~/*": ["src/*"]
		},
		"allowJs": true
	},
	"exclude": ["extension", "node_modules"]
}
